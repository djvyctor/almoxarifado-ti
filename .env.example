# -----------------------------------------
# PostgreSQL Database
# -----------------------------------------
POSTGRES_USER=admin
POSTGRES_PASSWORD=sua_senha_segura_aqui
POSTGRES_DB=almoxarifado

# -----------------------------------------
# Backend Application
# -----------------------------------------
APP_PORT=8080

DB_HOST=postgres
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=sua_senha_segura_aqui
DB_NAME=almoxarifado

ADMIN_DEFAULT_EMAIL=admin@almoxarifado.com
ADMIN_DEFAULT_PASSWORD=sua_senha_admin_forte_aqui

# IMPORTANTE: Gere com openssl rand -base64 32 ou node crypto
JWT_SECRET=

# TLS (Opcional)
ENABLE_TLS=false
TLS_CERT_FILE=certs/cert.pem
TLS_KEY_FILE=certs/key.pem
DOMAIN=
AUTO_TLS=false
TLS_CERT_DIR=certs
