# ===========================================
# BACKEND ENVIRONMENT VARIABLES
# ===========================================
# Copie este arquivo para .env e preencha com valores reais
# NUNCA commite o arquivo .env no Git!

# -----------------------------------------
# Application Configuration
# -----------------------------------------
APP_PORT=8080

# -----------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------
# Usar em docker-compose.yml
POSTGRES_USER=admin
POSTGRES_PASSWORD=sua_senha_segura_aqui
POSTGRES_DB=corvi

# Conexão da aplicação Go
DB_HOST=localhost
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=sua_senha_segura_aqui
DB_NAME=corvi

# -----------------------------------------
# Admin Default User (Seed)
# -----------------------------------------
# Usuário admin criado automaticamente na primeira execução
ADMIN_DEFAULT_EMAIL=admin@corvi.com
ADMIN_DEFAULT_PASSWORD=sua_senha_admin_forte_aqui

# -----------------------------------------
# JWT Secret (CRÍTICO - SEGURANÇA)
# -----------------------------------------
# IMPORTANTE: Use no mínimo 32 caracteres aleatórios
# Gere com: openssl rand -base64 32
# Ou use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=

# -----------------------------------------
# TLS/SSL Configuration (Opcional)
# -----------------------------------------
# Habilite HTTPS para produção
ENABLE_TLS=false
TLS_CERT_FILE=certs/cert.pem
TLS_KEY_FILE=certs/key.pem

# Auto TLS (Let's Encrypt - Produção)
DOMAIN=
AUTO_TLS=false
TLS_CERT_DIR=certs
